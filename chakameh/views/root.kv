
#:import adapters chakameh.uix.adapters
#:import image kivy.core.image
#:import config chakameh.config.config

Widget:
  texture: image.Image(config.background_image).texture
  on_size:
    print config.background_image
    self.texture.uvsize = (self.width/8.0,self.height/8.0)
    self.texture.wrap = 'repeat'  
  canvas:
    Rectangle:
      size: self.size
      pos: self.pos
      texture: self.texture
  BoxLayout:
    size: root.size
    pos: root.pos
    orientation: 'vertical'
    AudioPlayer:
      id: player
      size_hint: 1, .08
    BoxLayout:
      size_hint: 1, .92
      orientation: 'horizontal'

      # Main Detail View
      BoxLayout:
        orientation: 'vertical'
        size_hint: .9, 1
        Playlist:
          id: playlist
          size_hint: 1, .82
        MediaArt:
          id: mediaart
          size_hint: 1, None
          min_size: root.height * .14
          height: root.height * .14
          max_size: root.height * .80
          sizable_from: 'top'     
            
      RightPane:
        id: rightpane
        size_hint: .2, 1
