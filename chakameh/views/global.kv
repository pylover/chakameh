<Label>:
  font_name: 'DejaVuSans'
#  text_size: self.width - 1, None
  font_size: 13
  
# <ToggleButton>:
  # background_color: .2,.2,.2,1
  
# <ColumnHeaderCell>:
  # # background_color: .168,.223,.117,.5
  # # deselected_color: .168,.223,.117,.5
  # # selected_color: .168,.223,.117,.1
    
[AccordionItemTitle@Label]:
  text: ctx.title
  color: 
    (1,1,1,1) if ctx.item.collapse else (0,0,0,1)
  canvas.before:
    Color:
      rgb: 1, 1, 1
    BorderImage:
      source:
        ctx.item.background_normal \
        if ctx.item.collapse \
        else ctx.item.background_selected
      pos: self.pos
      size: self.size
    PushMatrix
    Translate:
      xy: self.center_x, self.center_y
    Rotate:
      angle: 90 if ctx.item.orientation == 'horizontal' else 0
      axis: 0, 0, 1
    Translate:
      xy: -self.center_x, -self.center_y
  canvas.after:
    PopMatrix    
