Widget:
  BoxLayout:
    size: root.size
    pos: root.pos
    orientation: 'vertical'
    AudioPlayer:
      id: 'player'
      size_hint: 1, .08
      color: 1,0,0,1
    BoxLayout:
      size_hint: 1, .92
      orientation: 'horizontal'

      # Main Detail View
      Playlist:
        id: playlist
        orientation: 'vertical'
        size_hint: .9, 1
        BoxLayout:
          orientation: 'horizontal'
          size_hint: 1, None
          height: 32
          ToggleButton:
            size_hint: .12, 1
            text: 'دستگاه'
            halign: 'right'
          ToggleButton:
            size_hint: .12, 1
            text: 'شاعر'
            halign: 'right'
          ToggleButton:
            size_hint: .12, 1
            text: 'آهنگساز'
            halign: 'right'
          ToggleButton:
            size_hint: .12, 1
            text: 'خواننده'
            halign: 'right'
          ToggleButton:
            size_hint: .43, 1
            text: 'عنوان'
            halign: 'right'
          ToggleButton:
            size_hint: .07, 1
            text: 'کد'
            halign: 'left'
        ListView:
          id: playlistview
          size_hint: 1, .92         
        StackLayout:
          orientation: 'rl-tb'
          size_hint: 1, .04        
            
      #Right Pane
      Accordion:
        size_hint: .2, 1
        orientation: 'vertical'
        AccordionItem:          
          title: 'خواننده'
          ListView:
            adapter:
              adapters.ArtistAdapter()
        AccordionItem:
          title: 'شاعر'
          ListView:
            adapter:
              adapters.LyricistAdapter()            
        AccordionItem:
          title: 'دستگاه'     
          ListView:
            adapter:
              adapters.GenereAdapter()            
        AccordionItem:
          title: 'آهنگساز'
          ListView:
            adapter:
              adapters.ComposerAdapter()
